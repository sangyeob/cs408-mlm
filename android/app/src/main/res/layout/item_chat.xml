<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light">

    <TextView
        android:text="Lorem ipsum dolor sit ametLorem ipsum dolor sit ametLorem ipsum ..."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvChatName"
        android:layout_alignLeft="@+id/tvChatName"
        android:layout_alignStart="@+id/tvChatName"
        android:layout_marginTop="10dp"
        android:id="@+id/tvLastMessage"
        android:textSize="12sp"
        android:textColor="@android:color/black"
        android:layout_alignBottom="@+id/ivChatImage" />

    <TextView
        android:text="8:24 PM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvLastMessage"
        android:id="@+id/tvLastMessageTime"
        android:textColor="@android:color/darker_gray"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Chat name goes here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:id="@+id/tvChatName"
        android:textColor="@android:color/black"
        tools:textStyle="bold"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:layout_alignTop="@+id/ivChatImage"
        android:layout_toRightOf="@+id/ivChatImage" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivChatImage"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:src="@drawable/create_chatroom"
        android:layout_marginTop="11dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="13dp" />
</RelativeLayout>
